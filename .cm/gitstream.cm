manifest:
  version: 1.0

on:
  - comment_added

automations:
  review_slash_commands:
    if:
       - {{ is.requested }}
    run:
      - action: run-github-workflow@v1
        args:
          workflow: .github/workflows/demo.yml
is:
  requested: {{ pr.comments | match(attr='content', term='/gitstream dispatch demo') | some }}
