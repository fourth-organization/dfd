manifest:
  version: 1.0

automations:
  review_todo_comments:
    if:
       - {{ is.requested }}
    run: 
      - action: request-changes@v1
        args:
          comment: | 
                 @bot-gitstream check all
is:
  requested: {{ (pr.comments | match(attr='content', term='@bot-gitstream check all') | some) }}
